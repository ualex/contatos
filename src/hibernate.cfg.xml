<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
<session-factory>
	<property name="hibernate.connection.username">contatos</property>
	<property name="hibernate.connection.password">alex</property>
	<property name="hibernate.connection.url">jdbc:postgresql://localhost/contatos</property>
	<property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
	<property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
	<property name="hibernate.hbm2ddl.auto">update</property>
	<property name="show_sql">true</property>
	<property name="format_sql">true</property>
	<mapping class="exemplo.beans.Contato" />
	<mapping class="exemplo.beans.Usuario" />
</session-factory>
</hibernate-configuration>